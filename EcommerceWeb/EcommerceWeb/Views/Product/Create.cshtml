 

@{
    ViewBag.Title = "Create";
}

<style>
    .form-design {
        background: azure;
        padding: 20px 40px;
        border-radius: 20px;
        box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
    }

    input {
        width: 300px;
        padding: 5px 10px;
        display: block;
        border: none;
        border-radius: 5px;
        transition: 0.5s;
    }

        textarea:focus, input:focus {
            outline: none;
            background: lavender;
        }

    span {
        font-size: 12px;
    }
</style>
<div class="d-flex justify-content-center align-items-center" style="height: 85vh">
    <div class="form-design">
        <h4 class="fw-bold text-danger text-uppercase">Add Product</h4>
        <form action="/Product/Create" method="post" enctype="multipart/form-data">
            <input type="text" name="P_Name" value="" placeholder="Product Name" class="form-control my-3" />
            <input type="text" name="Quantity" value="" placeholder="Quantity" class="form-control my-3" />
            <input type="text" name="Price" value="" placeholder="Price" class="form-control my-3" />
            <input type="file" name="ImageFile" value="" placeholder="Image" class="form-control my-3" />
            <button type="submit" class="btn btn-sm btn-primary px-3">Add</button>
        </form>
    </div>
</div>

